{
    "env": {
        "es2022": true
    },
    "extends": "airbnb-base",
    "overrides": [
        {
            "extends": [
                "./typescript.eslint.json"
            ],
            "files": "*.ts"
        },
        {
            "extends": [
                "./typescript.eslint.json"
            ],
            "files": "*.tsx",
            "parserOptions": {
                "ecmaFeatures": {
                    "jsx": true
                }
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "curly": "off",
        "import/extensions": "off",
        "no-console": "off",
        "no-promise-executor-return": "off",
        "no-unused-expressions": [
            "error",
            {
                "allowShortCircuit": true,
                "allowTaggedTemplates": true,
                "allowTernary": true
            }
        ],
        "nonblock-statement-body-position": [
            "warn",
            "below"
        ],
        "prefer-template": "off",
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-nested-ternary": "off"
    }
}
