{
    "env": {
        "es2022": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "curly": "off",
        "import/extensions": "off",
        "no-console": "off",
        "no-promise-executor-return": "off",
        "nonblock-statement-body-position": [
            "warn",
            "below"
        ],
        "prefer-template": "off",
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-unused-expressions": [
            "error",
            {
                "allowShortCircuit": true,
                "allowTernary": true,
                "allowTaggedTemplates": true
            }
        ]
    },
    "overrides": [
        {
            "files": "*.ts",
            "extends": [
                "plugin:@typescript-eslint/recommended"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": [
                "@typescript-eslint"
            ]
        },
        {
            "files": "*.tsx",
            "extends": [
                "plugin:@typescript-eslint/recommended"
            ],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "ecmaFeatures": {
                    "jsx": true
                }
            },
            "plugins": [
                "@typescript-eslint"
            ]
        }
    ]
}